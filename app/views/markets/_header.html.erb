        <div class="popup__btn-container sign-up__manage-row">
          <button class="btn btn--blue popup__btn sign-up__btn" onclick="showComponent('forgetPassword')">Dismiss</button>
        </div>
      </div>
    </div>
  </div>
  <!--End Of forget password component-->

